{
  "name": "logoscripta",
  "version": "0.2.1",
  "description": "An ETL toolkit and educational platform for data collection, transformation, and visualization, designed for digital humanities researchers and aspiring developers",
  "license": "MIT",
  "keywords": [
    "software-architecture",
    "architecture",
    "ddd",
    "domain-driven-design",
    "ddd-architecture",
    "clean-architecture",
    "onion-architecture",
    "hexagonal-architecture",
    "best-practices",
    "solid",
    "solid-principles",
    "educational",
    "fullstack",
    "full-stack",
    "etl",
    "backend",
    "typescript",
    "drizzle-orm",
    "sqlite",
    "zod",
    "trpc",
    "react",
    "tanstack",
    "tailwindcss",
    "shadcn-ui",
    "vite",
    "github-api",
    "obsidian",
    "obsidian-md",
    "digital-humanities"
  ],
  "homepage": "https://github.com/mugencraft/logoscripta#readme",
  "bugs": {
    "url": "https://github.com/mugencraft/logoscripta/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "logoscripta": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "server": "tsx src/interfaces/server/main.ts",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "start": "node dist/index.js",
    "dev": "node --import tsx src/index.ts",
    "dev:vite": "vite --port=3001",
    "build:vite": "vite build",
    "preview": "vite preview",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "llm": "./scripts/repomix.sh",
    "g": "trafilatura -o ai/articles --markdown --filename-template \"{domain}_{path}.{ext}\" -u $1",
    "knip": "knip --config .config/knip.ts",
    "check:deps": "depcruise --config .config/.dependency-cruiser.cjs src",
    "visualize:domain": "depcruise --config .dependency-cruiser.cjs --include-only 'src/domain' --output-type dot src | dot -T svg > domain-deps.svg",
    "test": "vitest",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "vitest run test/e2e",
    "test:coverage": "vitest run --coverage",
    "test:failing": "vitest run --reporter=list",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.3",
    "@libsql/client": "^0.15.12",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@smastrom/react-rating": "^1.5.0",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-form": "^1.19.2",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-ranger": "^0.0.4",
    "@tanstack/react-router": "^1.131.26",
    "@tanstack/react-router-devtools": "^1.131.26",
    "@tanstack/react-table": "^8.21.3",
    "@trpc/client": "11.4.4",
    "@trpc/react-query": "11.4.4",
    "@trpc/server": "11.4.4",
    "@uiw/react-color": "^2.7.3",
    "c12": "^3.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.1.1",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "fast-csv": "^5.0.5",
    "fast-glob": "^3.3.3",
    "lucide-react": "^0.539.0",
    "ora": "^8.2.0",
    "papaparse": "5.5.3",
    "react": "19.1.1",
    "react-day-picker": "9.9.0",
    "react-dom": "^19.1.1",
    "react-rnd": "^10.5.2",
    "react-select": "^5.10.2",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "use-debounce": "^10.0.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@octokit/types": "^14.1.0",
    "@tanstack/router-plugin": "^1.131.26",
    "@types/cors": "^2.8.19",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.3.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "dependency-cruiser": "^17.0.1",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.9",
    "knip": "^5.62.0",
    "lint-staged": "^16.1.5",
    "rimraf": "^6.0.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "vitest": {
    "globals": true,
    "setupFiles": [
      "./test/helpers/setup.ts"
    ],
    "environment": "node",
    "coverage": {
      "reporter": [
        "text",
        "json",
        "html"
      ],
      "exclude": [
        "**/node_modules/**",
        "**/test/**",
        "**/scripts/**",
        "**/src/interfaces/**",
        "**/src/ui/**"
      ]
    }
  },
  "lint-staged": {
    "*": [
      "biome check --apply"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
