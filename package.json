{
	"name": "logoscripta",
	"version": "0.1.0",
	"description": "An ETL toolkit and educational platform for data collection, transformation, and visualization, designed for digital humanities researchers and aspiring developers",
	"license": "MIT",
	"keywords": [
		"software-architecture",
		"architecture",
		"ddd",
		"domain-driven-design",
		"ddd-architecture",
		"clean-architecture",
		"onion-architecture",
		"hexagonal-architecture",
		"best-practices",
		"solid",
		"solid-principles",
		"educational",
		"fullstack",
		"full-stack",
		"etl",
		"backend",
		"typescript",
		"drizzle-orm",
		"sqlite",
		"zod",
		"trpc",
		"react",
		"tanstack",
		"tailwindcss",
		"shadcn-ui",
		"vite",
		"github-api",
		"obsidian",
		"obsidian-md",
		"digital-humanities"
	],
	"homepage": "https://github.com/mugencraft/logoscripta#readme",
	"bugs": {
		"url": "https://github.com/mugencraft/logoscripta/issues"
	},
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"logoscripta": "./dist/index.js"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:check": "drizzle-kit check",
		"build": "node esbuild.config.js",
		"watch": "node esbuild.config.js --watch",
		"type-check": "tsc --noEmit",
		"clean": "rimraf dist",
		"start": "node dist/index.js",
		"dev": "node --import tsx src/index.ts",
		"dev:vite": "vite --port=3001",
		"build:vite": "vite build",
		"preview": "vite preview",
		"server": "tsx src/interfaces/server/main.ts",
		"format": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --apply .",
		"rep": "./scripts/repomix.sh",
		"g": "trafilatura -o ai/articles --markdown --filename-template \"{domain}_{path}.{ext}\" -u $1",
		"check:deps": "depcruise --config .dependency-cruiser.cjs src",
		"visualize:domain": "depcruise --config .dependency-cruiser.cjs --include-only 'src/domain' --output-type dot src | dot -T svg > domain-deps.svg",
		"test": "vitest",
		"test:unit": "vitest run test/unit",
		"test:integration": "vitest run test/integration",
		"test:e2e": "vitest run test/e2e",
		"test:coverage": "vitest run --coverage",
		"test:failing": "vitest run --reporter=list",
		"test:watch": "vitest watch",
		"knip": "knip"
	},
	"dependencies": {
		"@inquirer/prompts": "^7.3.2",
		"@libsql/client": "^0.14.0",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-popover": "^1.1.6",
		"@radix-ui/react-radio-group": "^1.2.3",
		"@radix-ui/react-scroll-area": "^1.2.3",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-tabs": "^1.1.3",
		"@radix-ui/react-toast": "^1.2.6",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@tailwindcss/vite": "^4.0.9",
		"@tanstack/react-form": "^0.45.1",
		"@tanstack/react-query": "^5.66.9",
		"@tanstack/react-ranger": "^0.0.4",
		"@tanstack/react-router": "^1.111.11",
		"@tanstack/react-table": "^8.21.2",
		"@trpc/client": "11.0.0-rc.802",
		"@trpc/react-query": "11.0.0-rc.802",
		"@trpc/server": "11.0.0-rc.802",
		"c12": "^2.0.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "1.0.4",
		"commander": "^13.1.0",
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.39.3",
		"drizzle-zod": "^0.7.0",
		"fast-glob": "^3.3.3",
		"lodash": "^4.17.21",
		"lodash-es": "^4.17.21",
		"lucide-react": "^0.475.0",
		"ora": "^8.2.0",
		"papaparse": "5.5.2",
		"react": "19.0.0",
		"react-day-picker": "9.5.1",
		"react-dom": "^19.0.0",
		"react-select": "^5.10.0",
		"recharts": "^2.15.1",
		"sonner": "^2.0.1",
		"tailwind-merge": "^3.0.2",
		"tailwindcss": "^4.0.9",
		"use-debounce": "^10.0.4",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@octokit/types": "^13.8.0",
		"@tanstack/router-devtools": "^1.111.11",
		"@tanstack/router-plugin": "^1.111.12",
		"@types/cors": "^2.8.17",
		"@types/inquirer": "^9.0.7",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^22.13.5",
		"@types/papaparse": "^5.3.15",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"dependency-cruiser": "^16.10.0",
		"drizzle-kit": "^0.30.5",
		"esbuild": "^0.25.0",
		"knip": "^5.45.0",
		"lint-staged": "^15.4.3",
		"rimraf": "^6.0.1",
		"tailwindcss-animate": "^1.0.7",
		"tsx": "^4.19.3",
		"typescript": "^5.7.3",
		"vite": "^6.2.0",
		"vitest": "^3.0.7"
	},
	"vitest": {
		"globals": true,
		"setupFiles": ["./test/helpers/setup.ts"],
		"environment": "node",
		"coverage": {
			"reporter": ["text", "json", "html"],
			"exclude": [
				"**/node_modules/**",
				"**/test/**",
				"**/scripts/**",
				"**/src/interfaces/**",
				"**/src/ui/**"
			]
		}
	},
	"lint-staged": {
		"*": ["biome check --apply"]
	},
	"commitlint": {
		"extends": ["@commitlint/config-conventional"]
	}
}
