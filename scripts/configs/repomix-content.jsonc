{
  "output": {
    "filePath": "ai/codebase.xml.txt",
    "headerText": "LogoScripta Codebase",
    "style": "xml",
    // "removeComments": true,
    "removeEmptyLines": true,
    // "compress": true
    "compress": false,
    "topFilesLength": 10,
    "fileSummary": true,
    "directoryStructure": true,
    "git": {
      "sortByChanges": true,
      "includeDiffs": false
    }
  },
  "tokenCount": {
    "encoding": "o200k_base"
  },
  "include": [
    // Schema
    //
    // "src/shared/**/*",
    "src/shared/schema/content.ts",
    //
    // Core
    //
    "src/core/fs/**/*",
    "src/core/serialization/**/*",
    "src/core/utils/**/*",
    //
    // Domain
    //
    "src/domain/models/shared.ts",
    "src/domain/models/errors.ts",
    "src/domain/models/content/**/*",
    "src/domain/ports/content/*",
    "src/domain/services/shared/**/*",
    "src/domain/services/content/**/*",
    "src/domain/validation/shared.ts",
    "src/domain/validation/content/*",
    //
    // Infrastructure
    //
    "src/infrastructure/persistence/adapters/content/*",
    //
    // interfaces
    //
    // BACKEND
    //
    "src/interfaces/backend/app.tsx",
    "src/interfaces/backend/actions/content/**/*",
    "src/interfaces/backend/actions/useCrudActions.tsx",
    "src/interfaces/backend/routes/content/**/*",
    "src/interfaces/backend/tables/columns/content/**/*",
    "src/interfaces/backend/tables/columns/commons.tsx",
    "src/interfaces/backend/tables/useDataTable.ts",
    "src/interfaces/backend/views/content/**/*",
    //
    // SERVER
    "src/interfaces/server/routers/content/*",
    "src/interfaces/server-client.tsx",
    //
    // Ui
    //
    "src/ui/components/content/**/*",
    //
    "src/ui/components/actions/**/*",
    "src/ui/components/annotation/**/*",
    "src/ui/components/dashboard/**/*",
    "src/ui/components/extra/**/*",
    "src/ui/components/forms/**/*",
    "src/ui/components/import-export/**/*",
    "src/ui/components/layout/**/*",
    "src/ui/components/metadata/**/*",
    // "src/ui/components/table/**/*",
    "src/ui/components/table/types.ts"
    // "src/ui/components/table/DataTable.tsx",
    // "src/ui/components/table/cells/*",
    // "src/ui/components/table/cells/ActionCell.tsx",
    // "src/ui/components/table/controls/*",
    // "src/ui/components/table/controls/ActionButtons.tsx",
    // "src/ui/components/table/controls/SelectionControl.tsx",
    // "src/ui/components/table/controls/data-export/*"
    // "src/ui/components/table/controls/Filters.tsx", // Filters
    // "src/ui/components/table/controls/ColumnVisibilityControl.tsx",
    // "src/ui/components/table/controls/column-visibility-helpers.ts"
    // "src/ui/components/table/headers/*",
    // "src/ui/components/table/rows/*",
    // "src/ui/components/table/filters/FacetedFilter.tsx" // Filters
    //
    //  HOOKS
    //
    // "src/ui/hooks/*",
    // "src/ui/hooks/useKeyboardNavigation.ts"

    //
    // Theme
    // "src/ui/theme/**/*"
    // "src/ui/theme/globals.css"
  ],
  "ignore": {
    "customPatterns": [
      "src/ui/components/extra/multi-select.tsx",
      "src/interfaces/backend/routeTree.gen.ts"
    ]
  }
}
